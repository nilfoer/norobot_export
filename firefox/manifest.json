{
  "description": "Copies authentication information from your browser to your clipboard so you can pass it to scripts, which can use that information to access sites that use DDoS protection services like Cloudflare",
  "manifest_version": 2,
  "name": "NoRobot Exporter",
  "version": "0.1.0",
  "icons": {
    "48": "ico/norobot_48.png",
    "64": "ico/norobot_64.png",
    "96": "ico/norobot_96.png",
    "128": "ico/norobot_128.png"
  },

  "applications": {
    "gecko": {
      // 53 contextualIdentities, 63 clipboard.writeText
      "strict_min_version": "63.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": {
        "16": "ico/norobot_16.png",
        "32": "ico/norobot_32.png",
        "48": "ico/norobot_48.png",
        "64": "ico/norobot_64.png",
        "96": "ico/norobot_96.png",
        "128": "ico/norobot_128.png"
    },
    "default_title": "Export NoRobot info",
    "default_popup": "export_popup.html"
  },
  
  "permissions": ["cookies", "<all_urls>", "activeTab", "clipboardWrite", "contextualIdentities"]

}
