{
  "description": "Shows authentication information, that scripts can use to access sites that use DDoS protection services like Cloudflare",
  "manifest_version": 2,
  "name": "NoRobot Exporter",
  "version": "0.1",
  "icons": {
    "48": "ico/norobot.png"
  },

  "applications": {
    "gecko": {
      "strict_min_version": "50.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": "ico/norobot.png",
    "default_title": "Export NoRobot info",
    "default_popup": "export_popup.html"
  },
  
  "permissions": ["cookies", "<all_urls>", "activeTab", "clipboardWrite", "contextualIdentities"]

}
